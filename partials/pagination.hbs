{{#if nextPage}}
    <a class="link arrows" href="{{blogRoutePrefix}}{{pathPrefix}}/page/{{nextPage}}{{pathPostfix}}">
        <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
            <g opacity="1">
                <path d="M1 8H15" stroke="#292929" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M8 1L15 8L8 15" stroke="#292929" stroke-linecap="round" stroke-linejoin="round"/>
            </g>
        </svg>
    </a>
{{/if}}
</article>